<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFBFB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:layout_width="381dp"
            android:layout_height="344dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Intranet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Intranet"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Ingresar Usuario"
                android:inputType="text"
                android:padding="13dp" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Ingresar contraseña"
                android:inputType="textPassword"
                android:padding="13dp" />

            <TextView
                android:id="@+id/txt_contra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="13dp"
                android:text="¿Olvidate tu contraseña?"
                android:textAlignment="textEnd"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"
                android:backgroundTint="#EF97B5"
                android:padding="13dp"
                android:text="Ingresar"
                android:textColor="#050505" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
