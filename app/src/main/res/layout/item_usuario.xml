<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/Card1"
        android:layout_width="370dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/border_button"
        android:padding="5dp"
        android:paddingStart="0dp"
        card_view:cardElevation="0dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="-10dp"
            android:paddingStart="20dp"
            android:background="@drawable/borde_fondo"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="start"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewNombre"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        tools:text=""></TextView>

                    <TextView
                        android:id="@+id/textViewRol"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        tools:text=""></TextView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/imageButton2"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#FFFFFF"
                            android:scaleType="center"
                            android:layout_marginEnd="25dp"
                            card_view:srcCompat="@drawable/icon_delete"
                            card_view:tint="#FF0000" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewNumero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#555555"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:text="+51 123456789"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBoleta"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#D1F6E9"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingVertical="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="Ver Boleta"
                    android:textAllCaps="false"
                    android:textColor="#555555"
                    android:textSize="13dp"
                    card_view:cornerRadius="20dp"
                    card_view:rippleColor="#2B2B2B"
                    card_view:strokeColor="#D1F6E9" />

                <Button
                    android:id="@+id/btnEditar"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#F6D1DE"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingVertical="5dp"
                    android:layout_marginStart="5dp"
                    android:text="Editar"
                    android:textAllCaps="false"
                    android:textColor="#555555"
                    android:textSize="13dp"
                    card_view:cornerRadius="20dp"
                    card_view:rippleColor="#2B2B2B"
                    card_view:strokeColor="#F6D1DE" />


            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/Card2"
            android:layout_width="15dp"
            android:layout_height="109dp"
            android:layout_marginTop="5dp"
            card_view:cardBackgroundColor="#D1F6E9"
            card_view:cardCornerRadius="25dp"
            card_view:cardElevation="0dp"
            tools:ignore="MissingConstraints" />

    </androidx.cardview.widget.CardView>
</LinearLayout>

